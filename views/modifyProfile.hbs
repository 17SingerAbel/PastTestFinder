
<div class="container emp-profile">
     
            <div class="box-body">
                <div class="row">
                    <div class="offset-md-4 col-md-6">
                        <div class="profile-head">
                            <br>
                                    <h5 id = "userNn">
                                        User name : {{{user}}}
                                    </h5>
                             <br>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">Modify Details</a>
                                </li>
                                
                            </ul>
                        </div>
                    </div>
                    
                </div>
                <div class="row"> 
                    <div class="offset-md-4 col-md-8">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            {{#if errors}}
                                {{#each errors}}
                                    <div class="alert alert-danger">{{msg}}</div>
                                {{/each}}
                            {{/if}}
                                <form method = "post" action = "/user/modifyProfile">     
           
                                        <div class="form-group row">
                                            <div class="col-md-12">
                                                <label>Faculty: </label>
                                            </div>
                                            <input type="text" class="form-control" name = "InputFaculty" placeholder = {{{faculty}}} >
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-6">
                                                <label>Year of Study:</label>
                                            </div>
                                           <input type = "text" class="form-control" name = "InputYear" placeholder = {{{year}}} >
                                        </div>
                                        <label>Change Password(optional):</label>
                                        <div class="form-group row">
                                            <div class="col-md-6">
                                                <label>New Password:</label>
                                            </div>
                                           <input type = "password" class="form-control" name = "InputPass">
                                        </div>     
                                        <div class="form-group row">
                                            <div class="col-md-6">
                                                <label>Comfirm Password:</label>
                                            </div>
                                           <input type = "password" class="form-control" name = "ComfirmPass">
                                        </div>  
                             
                                        <div class=" row">       
                                            <button type="submit" class="btn btn-primary btn-sm" name = "submit">Save</button>
                                       </div>     
                                  </form> 
                            </div>            
                        </div>
                    </div>
                </div>
                                          
     </div>       
      
 </div>