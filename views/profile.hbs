

<div class="container emp-profile">
    <form method="get" action="/user/modifyProfile">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-img">
                            <img src='reading.png' alt=""/>
                            <div class="file btn btn-sm btn-primary">
                                Change Photo
                                <input type="file" name="file"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="profile-head">
                            <br>
                                    <h5 id = "userNn">
                                        User name : {{{user}}}
                                    </h5>
                             <br>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">Details</a>
                                </li>
                                
                            </ul>
                        </div>
                    </div>
                    
                </div>
                <div class="row">       
                    <div class="offset-md-4 col-md-8">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Faculty: </label>
                                            </div>
                                            <div class="col-md-6" >
                                                <p id="FacultyName">{{faculty}}</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Yeara of Study:</label>
                                            </div>
                                            <div class="col-md-6" >
                                                <p id ="yearStudy">{{{year}}}</p>
                                            </div>
                                        </div>
                                        
                            </div>            
                        </div>
                    </div>
                </div>

                <div class="offset-md-4">       
                    <button type="submit" class="btn btn-primary btn-sm">Edit Profile</button>
               </div>
                                                     
            </div>   
            </form>    
            <br>
            
            <div class="offset-md-4">
             <button type="button" class="btn btn-primary btn-sm" id = "ChangePa">Change Password</button>    
             </div>
        </div>
