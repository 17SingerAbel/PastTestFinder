<div class="center">

    <div id="pdf-buttons" class="m-2">
        <button id="pdf-prev" class="btn btn-outline-secondary btn-sm">Previous</button>
        <button id="pdf-next" class="btn btn-outline-secondary btn-sm">Next</button>
        <button id="pdf-smaller" class="btn btn-outline-dark btn-sm">-</button>
        <button id="pdf-bigger" class="btn btn-outline-dark btn-sm">+</button>
        <a id="pdf-download" class="btn btn-outline-success btn-sm" target="_blank">Download</a>
        <span class="ml-2" id='page'> Page: 1/10</span>
    </div>

    <canvas id="the-canvas" class="m-3"></canvas>

    <p>
        <a class="btn btn-primary mt-2" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            Add new comments
        </a>
    </p>

    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <form method="post" action="/user/pt-comments">
              <div class="form-group">
                  <textarea class="form-control" rows="5" id="new-comment" name="context"></textarea>
              </div>
              <button id="comment-submit-btn" class="btn btn-success" type="submit">Submit</button>
            </form>
        </div>
        <br>
    </div>

    {{#if success_msg}}
      <div class="alert alert-success card">{{success_msg}}</div>
    {{/if}}

    {{#if error_msg}}
      <div class="alert alert-danger card">{{error_msg}}</div>
    {{/if}}

    {{#if errors}}
      {{#each errors}}
          <div class="alert alert-danger card">{{msg}}</div>
      {{/each}}
    {{/if}}

    <div id="comments" class="card">
        <div class="card-header">
            Comments
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                <footer class="blockquote-footer">
                    Someone famous in <cite title="Source Title">Source Title</cite>
                </footer>
            </blockquote>
        </div>
    </div>

</div>

