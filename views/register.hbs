<div class="container">
    <div class="login-register-form">
        <div class="main-div">
            <div class="panel">
                <h2>Register</h2>
                <p>Please enter new username and password</p>
            </div>
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">{{msg}}</div>
                {{/each}}
            {{/if}}
            <form id="registerForm" method="post" action="/register">
                <div class="form-group">
                    <input type="text" class="form-control" id="newUsername" placeholder="Username" name="username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="newPassword" placeholder="Password" name="password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password-comfirm" placeholder="Confirm Password" name="password2">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>